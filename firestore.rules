rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is faculty
    function isFaculty() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'faculty';
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own profile
      // Admins can read all profiles
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      
      // Users can create their own profile (for Google sign-in)
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // Only admins can update user profiles (to change roles)
      // Users can update their own name and department
      allow update: if isAuthenticated() && 
                      (isAdmin() || 
                       (request.auth.uid == userId && 
                        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'uid', 'email'])));
      
      // Only admins can delete users
      allow delete: if isAdmin();
    }
    
    // Tasks collection
    match /tasks/{taskId} {
      // Admins can read all tasks
      // Faculty can read only their assigned tasks
      allow read: if isAuthenticated() && 
                    (isAdmin() || resource.data.assignedTo == request.auth.uid);
      
      // Only admins can create tasks
      allow create: if isAdmin();
      
      // Admins can update any task
      // Faculty can only update status and comments of their assigned tasks
      allow update: if isAuthenticated() && 
                      (isAdmin() || 
                       (isFaculty() && 
                        resource.data.assignedTo == request.auth.uid && 
                        request.resource.data.diff(resource.data).affectedKeys()
                          .hasOnly(['status', 'comments', 'updatedAt'])));
      
      // Only admins can delete tasks
      allow delete: if isAdmin();
    }
    
    // Audit logs collection
    match /auditLogs/{logId} {
      // Only admins can read audit logs
      allow read: if isAdmin();
      
      // Allow system to create audit logs (server-side operations)
      allow create: if isAuthenticated();
      
      // No updates or deletes allowed (audit logs are immutable)
      allow update, delete: if false;
    }
  }
}
